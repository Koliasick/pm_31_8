include ../mixins/mixins
doctype html
html
    head
        title Lab Two - #{title}
        block links
            link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
            link(href="css/styles.css" rel="stylesheet")
            link(rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs5/dt-1.11.3/datatables.min.css")

    body
        .container
            nav.navbar.navigation-bar
                #left.container-fluid
                    a.navbar-brand(href="/") Lab 2
                    ul.navbar-nav.flex-row
                        if(title == "Space Station")
                            +navbar_element("Space Station","SpaceStation",true)
                        else
                            +navbar_element("Space Station","SpaceStation")
                        if(title == "Planet")
                            +navbar_element("Planet","Planet",true)
                        else
                            +navbar_element("Planet","Planet")
                        if(title == "Cargo")
                            +navbar_element("Cargo","Cargo",true)
                        else
                            +navbar_element("Cargo","Cargo")

            .forms.mt-4
                block object-forms
                    form.action-one(onsubmit="return MakeDelivery();")
                        .input-wrapper.p-3
                            select.cargo-selector
                                option(selected disabled hidden) Choose cargo
                            select.receiver-selector
                                option(selected disabled hidden) Choose station
                            input(type="submit" value="deliver")
            .table.mt-4
                block objects-table
                    .table-wrapper
                        table(id="table").display.w-100
                            thead
                                tr
                                    th Number
                                    th Capacity
                                    th Demand
        block scripts
            script(src="node_modules/jquery/dist/jquery.min.js")
            script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
            script(type="text/javascript" src="https://cdn.datatables.net/v/bs5/dt-1.11.3/datatables.min.js")
            script(src="/js/models/base.js")
            script(src="/js/models/spaceStationModel.js")
            script(src="/js/models/PlanetStation.js")
            script(src="/js/models/planetModel.js")
            script(src="/js/models/cargoModel.js")
            script(src="/js/models/cargoPlanet.js")
            script(src="/js/models/cargoStation.js")
            script(src="/js/views/Home.js")
            script(src="/js/main.js")
